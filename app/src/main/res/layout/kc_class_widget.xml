<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Widget.JavaClub.AppWidget.Container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@style/Theme.JavaClub.AppWidgetContainer">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginBottom="5dp"
        android:layout_width="wrap_content"
        android:layout_height="20dp">
        <LinearLayout
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:layout_marginVertical="2dp"
            android:layout_marginEnd="10dp"
            android:background="@color/main"
            android:orientation="horizontal" />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            style="@style/IconColor"
            android:src="@drawable/widget_calendar"/>
        <TextView
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="第十四周   周三"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/kc_class_widget_day"/>
    <LinearLayout
        android:id="@+id/widget_class_day"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/widget_class_day_1"
            android:layout_width="match_parent"
            android:layout_marginVertical="2dp"
            android:visibility="gone"
            android:layout_height="40dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="08:15"/>
            <LinearLayout
                android:id="@+id/widget_class_color_1"
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:layout_marginVertical="2dp"
                android:layout_marginHorizontal="10dp"
                android:background="@color/main"
                android:orientation="horizontal" />
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/widget_class_name_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/widget_class_desc_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/widget_class_day_2"
            android:layout_width="match_parent"
            android:layout_marginVertical="2dp"
            android:layout_height="40dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="10:05"/>
            <LinearLayout
                android:id="@+id/widget_class_color_2"
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:layout_marginVertical="2dp"
                android:layout_marginHorizontal="10dp"
                android:background="@color/main"
                android:orientation="horizontal" />
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/widget_class_name_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/widget_class_desc_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/kc_class_widget_noon"/>
    <LinearLayout
        android:id="@+id/widget_class_afternoon"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/widget_class_day_3"
            android:layout_width="match_parent"
            android:layout_marginVertical="2dp"
            android:visibility="gone"
            android:layout_height="40dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="14:00"/>
            <LinearLayout
                android:id="@+id/widget_class_color_3"
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:layout_marginVertical="2dp"
                android:layout_marginHorizontal="10dp"
                android:background="@color/main"
                android:orientation="horizontal" />
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/widget_class_name_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/widget_class_desc_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/widget_class_day_4"
            android:layout_width="match_parent"
            android:layout_marginVertical="2dp"
            android:layout_height="40dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="15:50"/>
            <LinearLayout
                android:id="@+id/widget_class_color_4"
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:layout_marginVertical="2dp"
                android:layout_marginHorizontal="10dp"
                android:background="@color/main"
                android:orientation="horizontal" />
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/widget_class_name_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/widget_class_desc_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/kc_class_widget_night"/>
    <LinearLayout
        android:id="@+id/widget_class_night"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/widget_class_day_5"
            android:layout_width="match_parent"
            android:layout_marginVertical="2dp"
            android:layout_height="40dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="18:30"/>
            <LinearLayout
                android:id="@+id/widget_class_color_5"
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:layout_marginVertical="2dp"
                android:layout_marginHorizontal="10dp"
                android:background="@color/main"
                android:orientation="horizontal" />
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/widget_class_name_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/widget_class_desc_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>