<resources xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <!-- Base application theme. -->
    <style name="Theme.JavaClub" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main</item>
        <item name="colorPrimaryVariant">@color/main</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->

        <item name="android:statusBarColor">@color/white</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="FunctionButtonBai" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textSize">17sp</item>
        <item name="materialThemeOverlay">@style/BaiColor</item>
    </style>

    <style name="BaiColor">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="FunctionButtonKc" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textSize">17sp</item>
        <item name="materialThemeOverlay">@style/BaiColor</item>
    </style>

    <style name="MainColor">
        <item name="colorPrimary">#FF60D1AE</item>
        <item name="colorPrimaryVariant">#A6C5BB</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="LoginButton" parent="@style/Widget.MaterialComponents.Button">
        <item name="materialThemeOverlay">@style/MainColor</item>
    </style>

    <style name="SpiltLine" parent="@style/SettingBackground">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginHorizontal">10dp</item>
    </style>

    <style name="TextColor">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CardColor">
        <item name="cardBackgroundColor">#AAFFFFFF</item>
    </style>

    <style name="Translucent_NoTitle" parent="android:style/Theme.Dialog">
        <item name="android:backgroundTint">@android:color/transparent</item> <!-- 设置自定义布局的背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>  <!-- 设置window背景透明，也就是去边框 -->
    </style>

    <style name="IconColor">
        <item name="android:tint">@color/black</item>
    </style>

    <style name="SettingBackground">
        <item name="android:background">@color/gray</item>
    </style>

    <style name="SwitchColor">
        <item name="offColor">@color/gray</item>
    </style>

    <style name="NavColor">
        <item name="android:background">@color/white</item>
    </style>

    <style name="Theme.JavaClub.AppWidgetContainerParent">
        <item name="appWidgetRadius">10dp</item>
        <item name="appWidgetPadding">10dp</item>
        <item name="appWidgetInnerRadius">5dp</item>
    </style>

    <style name="Theme.JavaClub.AppWidgetContainer" parent="Theme.JavaClub.AppWidgetContainerParent">
        <item name="android:textColor">@color/black</item>
        <item name="android:colorBackground">#AAFFFFFF</item>
    </style>
</resources>