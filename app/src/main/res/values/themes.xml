<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.JavaClub" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main</item>
        <item name="colorPrimaryVariant">@color/main</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
        <item name="android:windowTranslucentStatus">true</item>

    </style>

    <style name="FunctionButtonBai" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textSize">17sp</item>
        <item name="materialThemeOverlay">@style/BaiColor</item>
    </style>

    <style name="BaiColor">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="FunctionButtonKc" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textSize">17sp</item>
        <item name="materialThemeOverlay">@style/BaiColor</item>
    </style>

    <style name="MainColor">
        <item name="colorPrimary">#FF60D1AE</item>
        <item name="colorPrimaryVariant">#A6C5BB</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="LoginButton" parent="@style/Widget.MaterialComponents.Button">
        <item name="materialThemeOverlay">@style/MainColor</item>
    </style>

    <style name="SpiltLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginHorizontal">10dp</item>
    </style>

    <style name="TextColor">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SettingBackground">
        <item name="android:background">@color/gray</item>
    </style>

    <style name="SwitchColor">
        <item name="offColor">@color/gray</item>
    </style>

    <style name="NavColor">
        <item name="android:background">@color/white</item>
    </style>
</resources>